generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id         Int       @id @default(autoincrement())
  siteId     String
  eventType  String
  path       String
  userId     String?
  timestamp  DateTime
  createdAt  DateTime  @default(now())

  @@map("events")
  @@index([siteId])
  @@index([timestamp])
  @@index([siteId, timestamp])
  @@index([path])
}
